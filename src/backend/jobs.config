 ******************/

// Define scheduled jobs to run backend functions automatically
// Documentation: https://dev.wix.com/docs/develop-websites/articles/coding-with-velo/backend-code/scheduling-recurring-jobs

{
  "jobs": [
    {
      "functionLocation": "/backend/scheduler.jsw", 
      "functionName": "checkMissedCheckIns",
      "description": "Daily check for defendants who have not reported location.",
      "executionConfig": {
        "time": "09:00",
        "daysOfWeek": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"] 
      }
    },
    {
      "functionLocation": "/backend/scheduler.jsw", 
      "functionName": "sendCourtDateReminders",
      "description": "Daily court date reminders (48h notice)",
      "executionConfig": {
        "time": "08:00" // 8:00 AM Daily
      }
    },
    {
      "functionLocation": "/backend/scheduler.jsw", 
      "functionName": "sendCheckInComplianceReport",
      "description": "Weekly compliance report (Monday 9AM)",
      "executionConfig": {
        "time": "09:00",
        "daysOfWeek": ["Mon"]
      }
    },
    {
      "functionLocation": "/backend/scheduler.jsw",
      "functionName": "sendPaymentReminders",
      "description": "Daily payment reminders (3 days due notice)",
      "executionConfig": {
        "time": "10:00"
      }
    }
  ]
}
