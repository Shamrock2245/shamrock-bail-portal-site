/***** UTILITIES *****/
function generateToken() {
  const chars =
    "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789";
  let token = "";
  for (let i = 0; i < 48; i++)
    token += chars.charAt(Math.floor(Math.random() * chars.length));
  return token;
}

// ... existing cleanupExpired ...

export async function cleanupExpired() {
  const now = Date.now();

  // sessions
  const s = await wixData.query("PortalSessions").find();
  await Promise.all(
    s.items.map((item) => {
      const ts = new Date(item.timestamp).getTime();
      if (now - ts > SESSION_TIMEOUT)
        return wixData.remove("PortalSessions", item._id);
    })
  );

  // magic links
  const m = await wixData.query("MagicLinks").find();
  await Promise.all(
    m.items.map((item) => {
      const exp = new Date(item.expiresAt).getTime();
      if (now > exp) return wixData.remove("MagicLinks", item._id);
    })
  );

  return { ok: true };
}

/***** DATA AGGREGATION (New for Defendant Portal) *****/
/**
 * Aggregates all data needed for the Defendant Dashboard.
 * Currently mocks missing DB fields, but STRUCTURE IS FINAL.
 */
export async function getDefendantDetails(userId) {
  // 1. Get Basic Profile
  const profile = await getUserProfile(userId);
  if (!profile) return null;

  // 2. Fetch Real Case Data from 'Cases' Collection
  // Automation Bridge: Bookmarklet -> GAS -> Wix (Cases) -> Portal (Here)
  let caseData = {};
  try {
    // Try to find case by Email first (most reliable link from Automation)
    let caseQuery = wixData.query("Cases");

    // If profile has an email, use it
    if (profile.email) {
      caseQuery = caseQuery.eq("defendantEmail", profile.email);
    } else if (profile.caseIds && profile.caseIds.length > 0) {
      // Fallback to caseId if available
      caseQuery = caseQuery.in("caseNumber", profile.caseIds);
    } else {
      // No linking info
      throw new Error("No email or caseId to link data");
    }

    const caseResult = await caseQuery.find({ suppressAuth: true });

    if (caseResult.items.length > 0) {
      const c = caseResult.items[0];
      caseData = {
        caseNumber: c.caseNumber || "Pending",
        bondAmount: c.bondAmount || "$0.00",
        nextCourtDate: c.nextCourtDate || "TBD", // Ensure scraper/GAS populates this
        caseStatus: c.status || "Active",
        charges: c.charges || "",
        county: c.county || ""
      };
    }
  } catch (err) {
    console.warn("getDefendantDetails: Case lookup failed/empty", err);
  }

  let firstName = "Client";
  try {
    const user = await wixUsersBackend.getUser(userId);
    if (user && user.info && user.info.firstName) {
      firstName = user.info.firstName;
    }
  } catch (e) { }

  const details = {
    firstName: firstName,
    caseNumber: caseData.caseNumber || "Pending",
    bondAmount: caseData.bondAmount || "$0.00",
    nextCourtDate: caseData.nextCourtDate || "TBD",
    caseStatus: caseData.caseStatus || "Active",
    paperworkStatus: "Incomplete", // TODO: Link to SignNow status if available
    signingStatus: "Waiting",
    charges: caseData.charges || "", // Added for UI
    county: caseData.county || "",   // Added for UI
    ...profile // overlay any existing profile data
  };

  return details;
}

export async function getIndemnitorDetails(token) {
  // Validate session to ensure security and get correct personId
  // Frontend passes session token, not raw userId
  const session = await validateCustomSession(token);
  if (!session || !session.personId) {
    console.warn("getIndemnitorDetails: Invalid session token provided.");
    throw new Error("Unauthorized: Invalid session");
  }

  const personId = session.personId;

  try {
    // Query FinancialObligations collection
    // Using suppressAuth: true because custom auth users are not Wix Members
    const result = await wixData.query("FinancialObligations")
      .eq("personid", personId)
      .limit(1)
      .find({ suppressAuth: true });

    if (result.items.length === 0) {
      console.warn(`No financial obligations found for personId: ${personId}`);
      // Return default structure to prevent frontend crash
      return {
        totalLiability: "$0.00",
        totalPremium: "$0.00",
        downPayment: "$0.00",
        balanceDue: "$0.00",
        chargesCount: 0,
        defendantName: "N/A",
        defendantStatus: "Unknown",
        lastCheckIn: "Never",
        nextCourtDate: "TBD"
      };
    }

    const data = result.items[0];

    return {
      totalLiability: data.totalliability || "$0.00",
      totalPremium: data.totalpremium || "$0.00",
      downPayment: data.downpayment || "$0.00",
      balanceDue: data.balancedue || "$0.00",
      chargesCount: Number(data.chargescount) || 0,
      defendantName: data.defendantname || "",
      defendantStatus: data.defendantstatus || "",
      lastCheckIn: data.lastcheckin || "",
      nextCourtDate: data.nextcourtdate || ""
    };
  } catch (error) {
    console.error("Error fetching indemnitor details:", error);
    throw error;
  }
}

export async function getStaffDashboardData() {
  await requireStaff();

  // 1. Query Real Cases
  let rawCases = [];
  try {
    const result = await wixData.query("Cases")
      .limit(100)
      .descending("_createdDate")
      .find({ suppressAuth: true });
    rawCases = result.items;
  } catch (err) {
    console.error("getStaffDashboardData: Failed to query Cases", err);
    // Fallback empty array to prevent crash
    rawCases = [];
  }

  // 2. Map Data
  const cases = rawCases.map(c => ({
    _id: c._id,
    caseNumber: c.caseNumber || "UNK",
    defendantName: c.defendantName || "Unknown",
    bondAmount: c.bondAmount || "$0.00",
    status: c.status || "Pending",
    paperworkStatus: c.paperworkStatus || "Incomplete", // Assumes this field exists or defaults
    phone: c.defendantPhone || "",
    defendantEmail: c.defendantEmail || ""
  }));

  // 3. Dynamic Stats
  const stats = {
    activeCases: cases.filter(c => c.status === 'Active' || c.status === 'open').length,
    pendingSignatures: cases.filter(c => c.paperworkStatus === 'Sent' || c.paperworkStatus === 'Pending').length,
    completedToday: cases.filter(c => {
      // Check if created today? Or status changed today? Using _createdDate for now as proxy for daily volume
      // Ideally we check a 'completionDate' field
      return false; // logic placeholder
    }).length,
    // totalCases: cases.length,
    failedChecks: 0 // Placeholder
  };

  return { stats, cases };
}


/***** SIMPLIFIED LOGIN SYSTEM (Fortune 50 Grade) *****/
/**
 * Simplified login/signup flow - Auto-detects role, sends magic link
 * Takes email or phone, checks existing data, sends appropriate magic link
 * 
 * @param {string} emailOrPhone - User's email or phone number
 * @returns {Promise<{success: boolean, isNewUser: boolean, message: string}>}
 */
export async function sendMagicLinkSimplified(emailOrPhone) {
  if (!emailOrPhone || typeof emailOrPhone !== 'string') {
    return {
      success: false,
      message: "Please enter a valid email or phone number."
    };
  }

  const input = emailOrPhone.trim().toLowerCase();

  try {
    // 1. Determine if email or phone
    const isEmail = input.includes('@');
    const searchField = isEmail ? 'defendantEmail' : 'defendantPhone';

    // 2. Check if user exists in Cases collection
    let userRole = null;
    let personId = null;
    let userName = null;
    let isNewUser = false;

    const caseQuery = await wixData
      .query("Cases")
      .eq(searchField, input)
      .limit(1)
      .find({ suppressAuth: true });

    if (caseQuery.items.length > 0) {
      // Existing user - they're a defendant
      const caseData = caseQuery.items[0];
      userRole = ROLES.DEFENDANT;
      personId = caseData._id; // Use case ID as personId
      userName = caseData.defendantName;
      isNewUser = false;

      console.log(`‚úÖ Existing defendant found: ${userName}`);
    } else {
      // Check if they're an indemnitor
      const indemnitorQuery = await wixData
        .query("Cases")
        .eq(isEmail ? 'indemnitorEmail' : 'indemnitorPhone', input)
        .limit(1)
        .find({ suppressAuth: true });

      if (indemnitorQuery.items.length > 0) {
        // Existing indemnitor
        const caseData = indemnitorQuery.items[0];
        userRole = ROLES.INDEMNITOR;
        personId = `indemnitor_${caseData._id}`;
        userName = caseData.indemnitorName;
        isNewUser = false;

        console.log(`‚úÖ Existing indemnitor found: ${userName}`);
      } else {
        // New user - create as defendant (default role for new signups)
        userRole = ROLES.DEFENDANT;
        personId = `new_${Date.now()}`; // Temporary ID until case is created
        userName = null;
        isNewUser = true;

        console.log(`üÜï New user detected: ${input}`);
      }
    }

    // 3. Generate magic link token
    const token = await generateMagicLink(personId, userRole);

    // 4. Send magic link via email/SMS
    const sendResult = await sendMagicLink(
      input,
      token,
      userRole,
      userName
    );

    if (!sendResult.success) {
      console.error(`‚ùå Failed to send magic link to ${input}:`, sendResult.error);
      return {
        success: false,
        message: "Unable to send secure link. Please try again or call 239-332-2245."
      };
    }

    console.log(`‚úÖ Magic link sent successfully to ${input}`);

    return {
      success: true,
      isNewUser: isNewUser,
      message: isNewUser
        ? "Welcome! Check your email/phone for your secure link."
        : "Check your email/phone for your secure link."
    };

  } catch (error) {
    console.error("‚ùå sendMagicLinkSimplified error:", error);
    return {
      success: false,
      message: "System error. Please try again or call 239-332-2245."
    };
  }
}

/**
 * Lookup user details by email or phone
 * Used for auto-populating forms and personalizing experience
 * 
 * @param {string} emailOrPhone - User's email or phone
 * @returns {Promise<{found: boolean, role: string, name: string, caseId: string}>}
 */
export async function lookupUserByContact(emailOrPhone) {
  if (!emailOrPhone) {
    return { found: false };
  }

  const input = emailOrPhone.trim().toLowerCase();
  const isEmail = input.includes('@');
  const searchField = isEmail ? 'defendantEmail' : 'defendantPhone';

  try {
    // Check defendant
    const defendantQuery = await wixData
      .query("Cases")
      .eq(searchField, input)
      .limit(1)
      .find({ suppressAuth: true });

    if (defendantQuery.items.length > 0) {
      const data = defendantQuery.items[0];
      return {
        found: true,
        role: ROLES.DEFENDANT,
        name: data.defendantName,
        caseId: data.caseNumber,
        personId: data._id
      };
    }

    // Check indemnitor
    const indemnitorQuery = await wixData
      .query("Cases")
      .eq(isEmail ? 'indemnitorEmail' : 'indemnitorPhone', input)
      .limit(1)
      .find({ suppressAuth: true });

    if (indemnitorQuery.items.length > 0) {
      const data = indemnitorQuery.items[0];
      return {
        found: true,
        role: ROLES.INDEMNITOR,
        name: data.indemnitorName,
        caseId: data.caseNumber,
        personId: `indemnitor_${data._id}`
      };
    }

    return { found: false };

  } catch (error) {
    console.error("lookupUserByContact error:", error);
    return { found: false };
  }
}
