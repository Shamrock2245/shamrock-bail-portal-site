        };

    } catch (error) {
        console.error('Error getting intake by case ID:', error);

        return {
            success: false,
            error: error.message
        };
    }
}

/**
 * Send notification to GAS that new intake is available
 * Generic Helper to call any GAS Action
 * @param {string} action - The action name (e.g., 'generateCertificate')
 * @param {Object} payload - The data to send
 */
export async function callGasAction(action, payload) {
    const [apiKey, gasUrl] = await Promise.all([
        getGasApiKey(),
        getGasWebAppUrl()
    ]);

    const body = {
        action: action,
        apiKey: apiKey,
        ...payload
    };

    const response = await fetchWithRetry(gasUrl, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body)
    });

    if (!response.ok) {
        throw new Error(`GAS HTTP Error: ${response.status}`);
    }

    const result = await response.json();
    return result;
}

/**
 * Notify GAS that a new intake has been processed successfully in Wix
 * @param {string} caseId - The Wix Item ID
 */
export async function notifyGASOfNewIntake(caseId) {
    try {
        const intakeResult = await wixData.query("IntakeQueue")
            .eq("caseId", caseId)
            .find({ suppressAuth: true });

        if (intakeResult.items.length === 0) {
            throw new Error('Intake not found');
        }

        const cleanData = normalizeIntakeData(intakeResult.items[0]);

        const result = await callGasAction('newIntake', {
            caseId: caseId,
            data: cleanData
        });

        if (!result.success) {
            throw new Error(`GAS Error: ${result.error?.message || 'Unknown backend error'}`);
        }

        console.log(`GAS notified of new intake: ${caseId}`);
        return result;

    } catch (error) {
        console.error("Failed to notify GAS:", error);
        // We do not throw here to prevent blocking the Wix UI flow
        return { success: false, error: error.message };
    }
}


/**
 * Health check endpoint for GAS to verify connection
 * 
 * @returns {Promise<Object>} - Health status
 */
export async function healthCheck() {
    try {
        // Test IntakeQueue access
        const testQuery = await wixData.query('IntakeQueue')
            .limit(1)
            .find({ suppressAuth: true });

        return {
            success: true,
            status: 'healthy',
            timestamp: new Date().toISOString(),
            intakeQueueAccessible: true
        };

    } catch (error) {
        return {
            success: false,
            status: 'unhealthy',
            error: error.message
        };
    }
}

/**
 * Get GAS Web App URL for Dashboard Access
 * Used by Staff Portal
 */
export async function getDashboardUrl() {
    try {
        const url = await getGasWebAppUrl();
        return { success: true, url: url };
    } catch (e) {
        console.error("Error getting dashboard URL", e);
        return { success: false, error: e.message };
    }
}
