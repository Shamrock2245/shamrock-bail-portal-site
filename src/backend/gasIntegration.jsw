export async function getIntakeByCaseId(caseId) {
    try {
        const results = await wixData.query('IntakeQueue')
            .eq('caseId', caseId)
            .find({ suppressAuth: true });

        if (results.items.length === 0) {
            return {
                success: false,
                error: 'Case not found'
